<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
   <children>
      <VBox alignment="CENTER" layoutX="100.0" layoutY="80.0" prefWidth="400.0" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0.5, 0, 5);">
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
         
         <!-- Welcome Message -->
         <Label fx:id="welcomeLabel" text="Selamat Datang di Dashboard!" textFill="#333">
            <font>
               <Font name="System Bold" size="28.0" />
            </font>
         </Label>
         
         <!-- Dashboard Icon/Emoji -->
         <Label text="ðŸŽ‰" textFill="#667eea">
            <font>
               <Font size="60.0" />
            </font>
         </Label>
         
         <!-- Description -->
         <Label text="Anda berhasil masuk ke sistem!" textFill="#666">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         
         <!-- Logout Button -->
         <Button fx:id="logoutButton" onAction="#logout" prefHeight="45.0" prefWidth="150.0" text="LOGOUT" 
                 style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.3, 0, 2);">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      </VBox>
   </children>
</AnchorPane>
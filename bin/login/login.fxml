<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController" style="-fx-background-color: #f5f6fa;">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #fff; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 20, 0.5, 0, 5); -fx-padding: 15 15 15 15;">
         <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(102,126,234,0.2), 8, 0.3, 0, 2);" />
         <Label text="LOGIN" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2563eb; -fx-padding: 0 0 5 0;" />
         <Label text="Masuk ke akun Anda" style="-fx-font-size: 14px; -fx-text-fill: #444; -fx-padding: 0 0 10 0;" />
         <VBox spacing="8.0">
            <Label text="Username" style="-fx-font-size: 13px; -fx-font-weight: 700; -fx-text-fill: #222;" />
            <TextField fx:id="usernameField" prefHeight="45.0" promptText="Masukkan username" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 0 15 0 15; -fx-font-size: 15px; -fx-background-color: #f8f9ff; -fx-prompt-text-fill: #888; -fx-font-weight: 500;" />
         </VBox>
         <VBox spacing="8.0">
            <Label text="Password" style="-fx-font-size: 13px; -fx-font-weight: 700; -fx-text-fill: #222;" />
            <PasswordField fx:id="passwordField" prefHeight="45.0" promptText="Masukkan password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 0 15 0 15; -fx-font-size: 15px; -fx-background-color: #f8f9ff; -fx-prompt-text-fill: #888; -fx-font-weight: 500;" />
         </VBox>
         <VBox spacing="8.0">
            <Label text="Kode Keamanan" style="-fx-font-size: 13px; -fx-font-weight: 700; -fx-text-fill: #222;" />
            <VBox spacing="5.0">
               <Label fx:id="securityCodeLabel" style="-fx-background-color: #f8f9ff; -fx-padding: 10; -fx-background-radius: 8; -fx-alignment: center; -fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #2563eb; -fx-letter-spacing: 2px;" text="1234" />
               <VBox spacing="5.0">
                  <TextField fx:id="securityCodeField" prefHeight="45.0" promptText="Masukkan kode keamanan" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 0 15 0 15; -fx-font-size: 15px; -fx-background-color: #f8f9ff; -fx-prompt-text-fill: #888; -fx-font-weight: 500;" />
                  <Button onAction="#refreshSecurityCode" prefHeight="30.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 11px; -fx-font-weight: 600; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.15), 6, 0.2, 0, 1); -fx-padding: 0 10 0 10;" text="ðŸ”„ Kode Baru" />
               </VBox>
            </VBox>
         </VBox>
         <Button fx:id="loginButton" onAction="#handleLoginButtonAction" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 14px;" text="MASUK" />
         <Button fx:id="registerButton" onAction="#handleRegisterButtonAction" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 14px;" text="DAFTAR" />
         <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-padding: 5 0 0 0; -fx-font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;" />
      </VBox>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0.5, 0, 5);">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         
         <!-- Header -->
         <Label text="LOGIN" textFill="#333">
            <font>
               <Font name="System Bold" size="32.0" />
            </font>
         </Label>
         
         <Label text="Masuk ke akun Anda" textFill="#666">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         
         <!-- Username Field -->
         <VBox spacing="8.0">
            <Label text="Username" textFill="#333">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="usernameField" prefHeight="45.0" promptText="Masukkan username" 
                      style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 0 15 0 15; -fx-font-size: 14;">
            </TextField>
         </VBox>
         
         <!-- Password Field -->
         <VBox spacing="8.0">
            <Label text="Password" textFill="#333">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" prefHeight="45.0" promptText="Masukkan password" 
                          style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 0 15 0 15; -fx-font-size: 14;">
            </PasswordField>
         </VBox>
         
         <!-- Security Code Section -->
         <VBox spacing="8.0">
            <Label text="Kode Keamanan" textFill="#333">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <VBox spacing="5.0">
               <Label fx:id="securityCodeLabel" text="1234" textFill="#667eea" style="-fx-background-color: #f8f9ff; -fx-padding: 10; -fx-background-radius: 8; -fx-alignment: center;">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Label>
               <VBox spacing="5.0">
                  <TextField fx:id="securityCodeField" prefHeight="45.0" promptText="Masukkan kode keamanan" 
                            style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 0 15 0 15; -fx-font-size: 14;">
                  </TextField>
                  <Button onAction="#refreshSecurityCode" text="ðŸ”„ Kode Baru" prefHeight="30.0" 
                         style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 11;">
                  </Button>
               </VBox>
            </VBox>
         </VBox>
         
         <!-- Login Button -->
         <Button fx:id="loginButton" onAction="#handleLoginButtonAction" prefHeight="45.0" prefWidth="220.0" text="MASUK" 
                 style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.3, 0, 2);">
            <font>
               <Font size="14.0" />
            </font>
         </Button>
         
         <!-- Status Label -->
         <Label fx:id="statusLabel" text="" textFill="#e74c3c">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         
         <!-- Demo Info -->
         <Label text="Demo: admin / admin123" textFill="#999">
            <font>
               <Font size="11.0" />
            </font>
         </Label>
      </VBox>
   </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardController">
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="206.0" spacing="20.0" style="-fx-background-color: #fff; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian, rgba(59,130,246,0.10), 16, 0.3, 0, 3); -fx-padding: 30 10 30 10;">
         <Label style="-fx-text-fill: #3b82f6; -fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" text="DASHBOARD" />
         <Button fx:id="btnDashboard" onAction="#handleDashboard" prefHeight="46.0" prefWidth="115.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 0 10 0; -fx-effect: dropshadow(gaussian, rgba(59,99,246,0.10), 6, 0.2, 0, 1);" text="🏠 Dashboard">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding></Button>
         <Button fx:id="btnInputMahasiswa" onAction="#handleInputMahasiswa" prefHeight="46.0" prefWidth="174.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 0 10 0; -fx-effect: dropshadow(gaussian, rgba(59,99,246,0.10), 6, 0.2, 0, 1);" text="👨‍🎓 Input Mahasiswa" />
         <Button fx:id="btnInputMatakuliah" onAction="#handleInputMatakuliah" prefHeight="46.0" prefWidth="167.0" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 0 10 0; -fx-effect: dropshadow(gaussian, rgba(59,99,246,0.10), 6, 0.2, 0, 1);" text="📚 Input Matakuliah" />
         <Button fx:id="logoutButton" onAction="#logout" prefHeight="46.0" prefWidth="100.0" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 0 10 0; -fx-effect: dropshadow(gaussian, rgba(239,68,68,0.10), 6, 0.2, 0, 1);" text="🚪 Logout" />
      </VBox>
   </left>
   <center>
      <StackPane fx:id="mainContent" alignment="TOP_CENTER">
         <VBox fx:id="tablePage" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="754.0" spacing="20.0" style="-fx-background-color: #fff; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(59,130,246,0.08), 12, 0.2, 0, 2); -fx-padding: 30 30 30 30;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: 800; -fx-text-fill: #3b82f6;" text="Data Mahasiswa" />
            <TableView fx:id="mahasiswaTable" prefHeight="200.0" prefWidth="700.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-font-size: 14px;">
               <columns>
                  <TableColumn fx:id="colNama" prefWidth="208.80002450942993" text="Nama Lengkap" />
                  <TableColumn fx:id="colNim" prefWidth="104.80001831054688" text="NIM" />
                  <TableColumn fx:id="colNoHp" prefWidth="137.5999755859375" text="No HP" />
                  <TableColumn fx:id="colEmail" prefWidth="173.59994506835938" text="Email" />
                  <TableColumn fx:id="colJenisKelamin" prefWidth="106.40008544921875" text="Jenis Kelamin" />
               </columns>
            </TableView>
            <Pagination fx:id="paginationMahasiswa" maxPageIndicatorCount="10" pageCount="1" />
            <Label style="-fx-font-size: 20px; -fx-font-weight: 800; -fx-text-fill: #3b82f6;" text="Data Matakuliah" />
            <TableView fx:id="matakuliahTable" prefHeight="200.0" prefWidth="700.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-font-size: 14px;">
               <columns>
                  <TableColumn fx:id="colKodeMatakuliah" prefWidth="159.20004892349243" text="Kode Matakuliah" />
                  <TableColumn fx:id="colNamaMatakuliah" prefWidth="416.800048828125" text="Nama Matakuliah" />
                  <TableColumn fx:id="colSks" prefWidth="159.9998779296875" text="SKS" />
               </columns>
            </TableView>
            <Pagination fx:id="paginationMatakuliah" maxPageIndicatorCount="10" pageCount="1" />
         </VBox>
      </StackPane>
   </center>
</BorderPane>

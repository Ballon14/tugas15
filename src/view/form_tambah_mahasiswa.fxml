<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="24" style="-fx-padding: 36; -fx-background-color: #f4f6fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FormTambahMahasiswaController">
    <Label text="Tambah Data Hasil Belajar Mahasiswa"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2d3a4b; -fx-padding: 0 0 12 0;"/>
    <GridPane hgap="18" vgap="18" alignment="CENTER">
        <Label text="NIM:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 15px;"/>
        <TextField fx:id="tfNim" promptText="NIM" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-width: 220px;"/>
        <Label text="Kelas:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 15px;"/>
        <TextField fx:id="tfKelas" promptText="Kelas" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-width: 220px;"/>
        <Label text="IPK:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 15px;"/>
        <TextField fx:id="tfIpk" promptText="IPK" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-width: 220px;"/>
        <Label text="Semester:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 15px;"/>
        <TextField fx:id="tfSemester" promptText="Semester" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-pref-width: 220px;"/>
        <Label text="Total SKS:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 15px;"/>
        <TextField fx:id="tfTotalSks" promptText="Total SKS" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-pref-width: 220px;"/>
    </GridPane>
    <HBox spacing="32" alignment="CENTER">
        <Button text="Simpan" fx:id="btnSimpan" onAction="#handleSimpan"
                style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 8 36; -fx-background-radius: 8;"/>
        <Button text="Batal" fx:id="btnBatal" onAction="#handleBatal"
                style="-fx-background-color: #b0bec5; -fx-text-fill: #263238; -fx-font-size: 16px; -fx-padding: 8 36; -fx-background-radius: 8;"/>
    </HBox>
</VBox> 